<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <style>
        *{
            padding: 0;
            margin: 0;
            list-style: none;
        }
        .header{
            background:linear-gradient(20deg,#33b5f1,#0776f5);
        }
        .header .container{
            max-width: 100%;
            display: flex;
            margin: auto;
            /* border: 1px solid red; */
        }
        .main_nav{
            position: relative;
            width: 100%;
            /* border: 1px solid black; */
            display: flex;
            flex-direction: row-reverse;     
        }
        .main_nav >button{
            margin: 0px 100px;
        }
        .btn{
            background-color: #0776f5;
            border: transparent
            
        }
        
        .main_nav > ul{
            width: 60px;
            text-align: center;
            display: none;
            position: absolute;
            /* border: 1px solid red; */
            right: 100px;
            top:63px;
            background:linear-gradient(20deg,#33b5f1,#0776f5);
            color: white;
        }
        .menu>li{
            width: 100%;
            height: 30px;
            color:rgb(0, 0, 0);
            font-size: 20px;
            font-weight: bolder;
            text-align: center;
        }
        .menu>li:hover a{
            color: white;
        }
        a{
            text-decoration: none;
            color: black;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="container">  

            <nav class="main_nav">
                <button class="btn">
                    <img src="/icons8-user-male-60.png">
                </button>
                <ul class="menu">
                    <% if(userName === "") {%>
                    <li><a href="">登入</a></li>
                    <% }else{ %>
                    <li><a class="loginout" href="/loginout">登出</a></li>
                    <% } %>
                </ul>
            </nav>

        </div>
    </div>
    
    <script>
        let btn = document.querySelector('.btn')
        let menu = document.querySelector('.menu')
        btn.addEventListener('click',test);
        function test(){
            if( menu.style.display==='none'||menu.style.display==''){
                menu.style.display='block'
            }else{
                menu.style.display='none'
            }
            
        }
      
    </script>
</body>
</html>